<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile</title>
  <link rel="stylesheet" href="/stylesheets/usersprofile.css" />
</head>


 <!-- hero banner -->
<div class="hero-banner"></div>

 <!-- Profile Pic -->
  <div class="avatar">
  </div>

 <!-- User Info -->
<section class="user-profile">
<div class="container">
    <h1 class="profile-title">Profile Page</h1>
        <p class="profile-username">Username: {{ user.username }}</p>
      <p class="profile-email">Email: {{ user.email }}</p>
</section>

 <!-- Post Info -->
<section class="posts-profile">
  <div class="container">
    <h1 class="post-title">Posts:</h1>
      <ul class="post-list">
  {{#each posts}}
  <br>
    <li class="date">♤ Created at: {{{formatDate this}}}</li>
        <br>
        <li class="username">♤ Created By: {{{this.username}}}</li>
        <br />
        <li class="content">♤ Post Content: {{{this.message}}}</li>
        <br />
      <form action="/posts/{{this._id}}/edit" method="GET">
        <button type="submit">Edit</button>
      </form>
    </li>
  {{/each}}
  <br>
</ul>
  </div>
</section>




